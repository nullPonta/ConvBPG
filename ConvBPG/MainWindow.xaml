<Window x:Class="ConvBPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvBPG"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Start" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="button_Click"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="160,20,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="clearButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="32" Margin="320,20,0,0" TextWrapping="Wrap" Text="Drag and drop" VerticalAlignment="Top" Width="320" TextChanged="textBox_TextChanged" PreviewDragOver="textBox_PreviewDragOver_1" PreviewDrop="textBox_PreviewDrop"/>
        <DataGrid x:Name="dataGrid" Margin="20,70,20,20" Grid.ColumnSpan="2" AutoGeneratingColumn="dataGrid_AutoGeneratingColumn"/>
    </Grid>
</Window>
