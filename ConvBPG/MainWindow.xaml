<Window x:Class="ConvBPG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConvBPG"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="startButton_Click"/>
        <Button x:Name="clearButton" Content="Clear" HorizontalAlignment="Left" Margin="160,20,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="clearButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="32" Margin="327,20,0,0" TextWrapping="Wrap" Text="Drag and drop to here" VerticalAlignment="Top" Width="320" TextChanged="textBox_TextChanged" PreviewDragOver="textBox_PreviewDragOver_1" PreviewDrop="textBox_PreviewDrop" TextAlignment="Center"/>
        <Button x:Name="settingButton" Content="Setting" HorizontalAlignment="Left" Margin="652,20,0,0" VerticalAlignment="Top" Width="120" Height="32" Click="settingButton_Click"/>
        <DataGrid x:Name="dataGrid" Margin="20,70,20,20" AutoGeneratingColumn="dataGrid_AutoGeneratingColumn"/>
    </Grid>
</Window>
